pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
                serviceAccount: jenkins-sa
                containers:
                - name: slave
                    image: jenkins/inbound-agent
                    tty: true
                - name: maven
                    image: maven:alpine
                    command:
                    - cat
                    tty: true
            '''
        }
    }
    stages {
        stage('checkout git') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('build image') {
            steps {
                container('slave') {
                    script {
                        def image = docker.build("mikey8520/final-project", "./app")
                    }
                }
            }
        }

        // Build and push with build tag (replace with actual build commands)
        stage('Push build tags') {
            environment {
                auth = 'dockerauth'
            }
            steps { 
                container('slave') {
                    script {
                        docker.withRegistry('https://hub.docker.com/repository/docker/mikey8520/final-project', 'dockerauth') {
                            image.push("${env.BUILD_NUMBER}")
                            image.push("latest")
                        }
                    }
                }
            }
        }
    }
}
