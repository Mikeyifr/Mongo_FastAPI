pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: maven
                image: maven:alpine
                command: mvn package 
                args: Ddockerfile.build=true
            '''
        }
    }

    // Define credentials for Git access (replace with your credentials ID)
    credentialsId 'gitauth'

    stages {
        // Clone the Git repository
        stage('Clone Repo') {
            steps {
                git branch: 'master', credentialsId: credentialsId, url: 'https://github.com/Mikeyifr/Mongo_FastAPI.git'
            }
        }

        // Build and push with build tag (replace with actual build commands)
        stage('Build and Push (build tag)') {
            steps {
                // Use container workspace (replace with actual build commands using Maven)
                sh '''
                mvn package -Ddockerfile.build=true
                '''

                docker.withRegistry('https://registry.hub.docker.com', 'dockerauth') {
                    docker.push image: 'mikey8520/final-project:${BUILD_NUMBER}'
                    docker.push image: 'mikey8520/final-project:latest'
                }
            }
        }
    }
}
