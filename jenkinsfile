pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
                serviceAccount: jenkins-sa
                containers:
                  - name: slave
                    image: docker:latest
                    tty: true
                    securityContext:  # This section grants privileged access
                        privileged: true
                  - name: maven
                    image: maven:alpine
                    command:
                    - cat
                    tty: true
            '''
        }
    }
    stages {
        stage('checkout git') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('build image') {
            steps {
                container('slave') {
                    script {
                        sh 'docker build -t mikey8520/final-project ./app'
                    }
                }
            }
        }

        // Build and push with build tag (replace with actual build commands)
        stage('Push build tags') {
            environment {
                auth = 'dockerauth'
            }
            steps { 
                container('slave') {
                    script {
                        withDockerRegistry(credentialsId: 'dockerauth') {
                            sh 'docker push mikey8520/final-project:${env.BUILD_NUMBER}'
                            sh 'docker push mikey8520/final-project'
                        }
                    }
                }
            }
        }
    }
}
